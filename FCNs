AREA OF CIRCLE WITH 4 DIFFERENT FUCNS
1)
#include<stdio.h>
#GIVING INPUT ANF OUTPUT
float circle(float a){
    float area;
    area= a*3.14*2;
    return(area);
}
int main(){
    float radius,area;
    printf("Enter radius to find circle=");
    scanf("%f",&radius);
    area=circle(radius);
    printf("area of circle is %f",area);
}
2)
#include<stdio.h>
#NO OUTPUT ONLY INPUT
void circle(float radius){
    float area;
    area=radius*2*3.14;
    printf("%f is area of circle",area);
}
int main(){
    float a;
    printf("Enter radius :");
    scanf("%f",&a);
    circle(a);
}
3)
#include<stdio.h>
#ONLY OUTPUT NO INPUT
float circle(void){
    float radius;
    printf("Enter radius =");
    scanf("%f",&radius);
    float area;
    area=radius*2*3.14;
    return(area);
}
int main(){
    float cirarea;
    cirarea=circle();
    printf("Area of circle is %f",cirarea);
}
4)
#include<stdio.h>
#NO INPUT AND OUTPUT
void circle(void){
    float radius,area;
    printf("Enter radius of circle=");
    scanf("%f",&radius);
    area=2*3.14*radius;
    printf("Area of cicrle is=%f",area);
}
int main(){
    circle();
}

#OPERATIONS USING FUNCTIONS
#include<stdio.h>
float sum(float a,float b){
    float result;
    result=a+b;
    return(result);
}
float sub(float a,float b){
    float result;
    result=a-b;
    return(result);
}
float mul(float a,float b){
    float result;
    result=a*b;
    return(result);
    }
float div(float a,float b){
    float result;
    result=(a/b);
    return(result);
}
    int main(){
        float a,b,add,minus,product,divison;
        printf("Enetr 2 number=");
        scanf("%f %f",&a,&b);
        add=sum(a,b);
        minus=sub(a,b);
        product=mul(a,b);
        divison=div(a,b);
        printf("ADDITION=%f\nSUBSTRACTION=%f\nPRODUCT=%f\nDIVISON=%f\n",add,minus,product,divison);
    }
#categorise
#include<stdio.h>
char characters(char i){
    if(i>=97&&i<=122){
        printf("small letter");
    }
    else if(i>=65&&i<=90){
        printf("capital letter");
    }
    return(i);
}
int main(){
    char letter,category;
    printf("Enter character=");
    scanf("%c",&letter);
    printf("%c is ",letter);
    category=characters(letter);
}
